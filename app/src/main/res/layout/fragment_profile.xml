<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.ProfileFragment">


    <ImageView
        android:id="@+id/profilImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/profilimage"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enes Kala"
        android:textSize="30dp"
        android:textColor="#BA0B0B"
        android:textStyle="bold"
        android:fontFamily="@font/sansita_extrabold"
        android:layout_marginTop="3dp"
        app:layout_constraintEnd_toEndOf="@+id/profilImage"
        app:layout_constraintStart_toStartOf="@+id/profilImage"
        app:layout_constraintTop_toBottomOf="@+id/profilImage" />

    <TextView
        android:id="@+id/useremailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="enes123@gmail.com"
        android:textSize="20dp"
        android:textColor="#514A4A"
        android:textStyle="bold"
        android:fontFamily="@font/sansita_extrabold"
        app:layout_constraintEnd_toEndOf="@+id/nameText"
        app:layout_constraintStart_toStartOf="@+id/nameText"
        app:layout_constraintTop_toBottomOf="@+id/nameText" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="144dp"
        android:fontFamily="@font/sansita_extrabold"
        android:text="Manage Profile"
        android:textColor="#BA0B0B"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/useremailText" />

    <Button
        android:id="@+id/infoButton"
        android:layout_width="335dp"
        android:layout_height="50dp"
        android:text="Your Information"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/loginbutton2_background"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <Button
        android:id="@+id/signOutButton"
        android:layout_width="335dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/loginbutton2_background"
        android:text="Sign Out"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/changeButton" />

    <Button
        android:id="@+id/changeButton"
        android:layout_width="335dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/loginbutton2_background"
        android:text="Change Profile"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoButton" />

    <TextView
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sansita_extrabold"
        android:text="edit profile  "
        android:textColor="#676262"
        android:textSize="15dp"
        android:drawableEnd="@drawable/baseline_send_24"
        android:layout_marginTop="60dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/useremailText" />
</androidx.constraintlayout.widget.ConstraintLayout>